---
import NavigationItem from '../components/NavigationItem.astro'
import MMTLogo from '../components/MMTLogo.astro'
import {Button} from '@translated/babele-react'

type Props = {
  tone: 'neutral' | 'primary'
}

const {tone} = Astro.props

let headerClass
if (tone=='primary'){
   headerClass = 'bg-primary-700 text-neutral-25'
} else {
   headerClass = 'bg-orange-100 text-neutral-1200'
}
---

<header class={headerClass}>
  <nav
    class="flex flex-row justify-between max-w-[1400px] w-[86%] mx-auto h-[104px]"
  >
    <div class="flex">
      <MMTLogo width="200" />
    </div>
    <ul class="flex flex-row center gap-5 items-center">
      <a href="/">
        <NavigationItem>For enterprises</NavigationItem>
      </a>
      <a href="/translator">
        <NavigationItem>For translator</NavigationItem>
      </a>
      <a href="/translate">
        <NavigationItem>Translate</NavigationItem>
      </a>
      <a href="/login">
        <NavigationItem>Login</NavigationItem>
      </a>
      <a href="/pricing">
        <Button
          variant={{tone, mode: 'outline'}}
          className="whitespace-nowrap"
        >
          Get started
        </Button>
      </a>
    </ul>
  </nav>
</header>
