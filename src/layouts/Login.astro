---
import {Button} from '@translated/babele-react'
import mmtFooter from '../assets/images/logos/mt_footer.svg'
import Link from '../components/Link.astro'
import {ViewTransitions} from 'astro:transitions'
interface Props {
  title: string
}

const {title} = Astro.props
import Header from '../components/Header.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ModernMT website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body data-theme="translated-light" class="bg-neutral-50 overflow-x-hidden">
    <Header tone="primary" />
    <slot />
  </body>
</html>

    <style is:global>
      @import '@translated/babele-tokens/assets/arsmaquettepro.css';
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
    </style>
