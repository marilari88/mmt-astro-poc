---
import {ViewTransitions} from 'astro:transitions'
interface Props {
  title: string
}

const {title} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ModernMT website" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body data-theme="translated-light" class="bg-neutral-50 overflow-x-hidden">
    <div class="w-full grid grid-cols-[auto_1fr]">
      <nav class="min-h-screen w-[300px] relative">
        <div
          class="fixed top-0 bottom-0 flex-col w-[300px] justify-between text-neutral-25 bg-primary-1200 p-10 flex"
        >
          <div class="flex flex-col gap-5">
            <a href="/dashboard">Dashboard</a>
            <a href="/billing">Billing</a>
            <a href="/settings">Account settings</a>
          </div>
          <div class="flex flex-col gap-5">
            <a href="/translate">Translate</a>
            <a href="/logout">Logout</a>
          </div>
        </div>
      </nav>
      <main><slot /></main>
    </div>
    <style is:global>
      @import '@translated/babele-tokens/assets/arsmaquettepro.css';
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
    </style>
  </body>
</html>
